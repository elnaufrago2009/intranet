<%= form_for(@tipodocumento, :html => {:class => "form-horizontal", :multipart => true}) do |f| %>
  <% if @tipodocumento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tipodocumento.errors.count, "error") %> prohibited this tipodocumento from being saved:</h2>

      <ul>
      <% @tipodocumento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <div class="control-label">
      <%= f.label :nombre %>
    </div>
    <div class="controls">
      <%= f.text_field :nombre, :class => "span5" %>
    </div>        
  </div>

  <div class="control-group">
      <div class="control-label">
        <%= f.label :tipodocumentoimg %>
      </div>
      <div class="controls">
        <div class="fileupload fileupload-new" data-provides="fileupload">
          <div class="fileupload-new thumbnail" style="max-width: 200px; max-height: 150px;">
            <% if @tipodocumento.tipodocumentoimg? %>
                <%= image_tag(@tipodocumento.tipodocumentoimg_url) %>
            <% else %>
                <%= image_tag "200x150.gif"  %>
            <% end %>
          </div>
          <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
          <div>
          <span class="btn btn-file">
            <span class="fileupload-new">Select image</span>
            <span class="fileupload-exists">Change</span>
            <%= f.file_field :tipodocumentoimg %>
          </span>
            <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
          </div>
        </div>
      </div>
    </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit :class => "btn" %>
    </div>    
  </div>
<% end %>
